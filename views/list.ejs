<%- include('header') -%>

  <body>
    <div class="box" id="heading">
      <h1>
        <%= listTitle %>
      </h1>
    </div>

    <div class="box">
      <% for( let i=0 ; i < lists.length ; i ++){ %>
        <div class="item">
          <input type="checkbox" name="" id="" />
          <p>
            <%= lists[i] %>
          </p>
        </div>
        <% }%>
          <form class="item" action="/" method="post">
            <input autofocus placeholder="Enter New Item" type="text" name="list" id="list_item" autocomplete="off" />

            <button type="submit" name="list" value=<%=listTitle %> >+</button>
          </form>


    </div>
    <%- include('footer') -%>